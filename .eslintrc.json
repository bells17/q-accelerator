{
  "extends": ["eslint:recommended"],
  "plugins": [],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "require": false,
    "module": false,
    "describe": false,
    "it": false,
    "beforeEach": false,
    "chrome": false
  },
  "rules": {
    "block-spacing": [2],
    "comma-spacing": [2, { "before": false, "after": true }],
    "indent": [2, 2],
    "no-console": "off",
    "no-trailing-spaces": [2],
    "space-before-blocks": [2, { "functions": "always", "keywords": "always", "classes": "always" }]
  }
}